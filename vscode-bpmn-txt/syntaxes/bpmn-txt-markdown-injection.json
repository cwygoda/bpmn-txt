{
  "scopeName": "markdown.bpmn-txt.codeblock",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    { "include": "#bpmn-txt-code-block" }
  ],
  "repository": {
    "bpmn-txt-code-block": {
      "begin": "(^|\\G)(\\s*)(\\`{3,}|~{3,})\\s*(?i:(bpmn(?:-txt)?))\\s*$",
      "end": "(^|\\G)(\\2|\\s{0,3})(\\3)\\s*$",
      "beginCaptures": {
        "3": { "name": "punctuation.definition.markdown" },
        "4": { "name": "fenced_code.block.language.markdown" }
      },
      "endCaptures": {
        "3": { "name": "punctuation.definition.markdown" }
      },
      "name": "markup.fenced_code.block.markdown",
      "contentName": "meta.embedded.block.bpmn-txt",
      "patterns": [
        { "include": "source.bpmn-txt" }
      ]
    }
  }
}
