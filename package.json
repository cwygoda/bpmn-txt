    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chevrotain": "^11.1.1",
    "chokidar": "^5.0.0",
    "elkjs": "^0.11.0",
    "fast-xml-parser": "^5.3.6",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
