{
  "name": "bpmn-txt",
  "version": "0.6.0",
  "description": "Text DSL for BPMN 2.0 - human-readable process definitions",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bpmn-txt": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "docs:dev": "cd docs && pnpm dev",
    "docs:build": "cd docs && pnpm build",
    "docs:preview": "cd docs && pnpm preview"
  },
  "keywords": [
    "bpmn",
    "dsl",
    "workflow",
    "process"
  ],
  "author": "Christian Wygoda",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.2.3",
    "semantic-release": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "bpmn-moddle": "^10.0.0",
    "bpmnlint": "^11.12.0",
    "bpmnlint-utils": "^1.1.1",
    "cac": "^6.7.14",
    "chevrotain": "^11.1.1",
    "chokidar": "^5.0.0",
    "elkjs": "^0.11.0",
    "fast-xml-parser": "^5.3.6",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
  }
}
